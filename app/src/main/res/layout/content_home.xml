<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_home">
    <com.daimajia.slider.library.SliderLayout
        android:layout_width="match_parent"
        app:pager_animation="Accordion"
        android:id="@+id/slider"
        android:background="#ABB1A7A7"
        android:layout_height="200dp"
        tools:ignore="MissingConstraints"></com.daimajia.slider.library.SliderLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="12dp"
        android:weightSum="5"
        android:background="#556B6F"

      android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
           android:layout_weight="1"
            android:layout_width="0dp"

            android:layout_height="wrap_content" android:src="@drawable/cofee"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:layout_width="0dp"

            android:layout_height="wrap_content" android:src="@drawable/cofee"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:layout_width="0dp"

            android:layout_height="wrap_content" android:src="@drawable/cofee"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:layout_width="0dp"

            android:layout_height="wrap_content" android:src="@drawable/cofee"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:layout_width="0dp"

            android:layout_height="wrap_content" android:src="@drawable/cofee"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="12dp"
        android:background="#81181616"
        android:weightSum="5"


        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp" android:textColor="#fff"
            android:background="@drawable/btna"
android:text="Coffee"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content" android:src="@drawable/cofee"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingLeft="5dp"
            android:text="Juices"  android:background="@drawable/btna"
            android:textSize="20dp"
            android:layout_height="wrap_content" android:src="@drawable/cofee"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:textSize="20dp" android:textColor="#fff"
            android:textStyle="bold"  android:background="@drawable/btna"
            android:text="Ice-Tea"
            android:layout_height="wrap_content" android:src="@drawable/cofee"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="20dp" android:textColor="#fff"
            android:text="Shakes"
            android:paddingLeft="12dp"  android:background="@drawable/btna"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:src="@drawable/cofee"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp" android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Tea"  android:background="@drawable/btna"
            android:paddingLeft="23dp"
            android:layout_height="wrap_content" android:src="@drawable/cofee"/>


    </LinearLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Popular Products"

    android:textAllCaps="true"
    android:textColor="#020202"
    android:layout_marginTop="10dp"
    android:textSize="20sp"
    android:layout_gravity="center"
    android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
        android:id="@+id/lst_menu"

        android:layout_gravity="bottom"
    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>